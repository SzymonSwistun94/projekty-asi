<% if @err.nil? %>
    <table style="border: 1px solid">
      <tr style="border: 1px solid">
        <td style="border: 1px solid">Title</td>
        <td style="border: 1px solid">Content</td>
      </tr>
      <tr style="border: 1px solid">
        <td style="border: 1px solid; width: 15%">
          <%= @note.title %>
        </td>
        <td style="border: 1px solid">
          <%= @note.content %>
        </td>
      </tr>
    </table>
<% else %>
    <%= @err %>
<% end %>